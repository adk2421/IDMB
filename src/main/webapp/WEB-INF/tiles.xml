<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<!-- main layout -->
	
	
	<!-- admin layout -->	
	<definition name="admin_layout" template="/WEB-INF/jsp/layout/admin_layout.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/layout/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp" />
		<put-attribute name="left" value="/WEB-INF/jsp/layout/left.jsp" />
		<put-attribute name="body" value="/WEB-INF/jsp/admin/body.jsp" />
	</definition>
	
	
	<!-- admin -->
	<definition name="adminMemberList" extends="admin_layout">
		<put-attribute name="body"
			value="/WEB-INF/jsp/admin/adminMemberList.jsp" />
	</definition>
	
	<definition name="adminMemberDetail" extends="admin_layout">
		<put-attribute name="body"
			value="/WEB-INF/jsp/admin/adminMemberDetail.jsp" />
	</definition>
	
</tiles-definitions>