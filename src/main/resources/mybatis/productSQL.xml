<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">

	<!-- 메인페이지 상품 리스트 -->
	<select id="mainpageProductList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM (
				SELECT
					*
				FROM
					PRODUCT
				WHERE
					P_DELFLAG = 'N'
				ORDER BY
					P_ZIM DESC
				)
			WHERE
				ROWNUM <= 3
		]]>
	</select>
	
	<!-- 상품 검색 -->
	<select id="searchProduct" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
				PRODUCT
			WHERE
				P_DELFLAG = 'N'
			]]>
			<trim prefix="AND">
				<if test="searchValue != NULL">
				P_NAME LIKE '%'||#{searchValue}||'%'
				</if>
			</trim>
			
			<trim prefix="AND">
				<if test="priceValue1 != NULL">
					<if test="priceValue2 != NULL">
						P_PRICE BETWEEN #{priceValue1} AND #{priceValue2}
					</if>
					<if test="priceValue2 == NULL">
						P_PRICE BETWEEN #{priceValue1} AND 99999999
					</if>
				</if>
				<if test="priceValue1 == NULL">
					<if test="priceValue2 != NULL">
						P_PRICE BETWEEN 0 AND #{priceValue2}
					</if>
					<if test="priceValue2 == NULL">
					</if>
				</if>	
			</trim>
			
			<trim prefix="ORDER BY">
				<if test="SORT == NULL">
				P_CODE DESC
				</if>
				<if test="SORT == 'newproduct'">
				P_CODE DESC  
				</if>
	        	<if test="SORT == 'bestproduct'">
				P_ZIM DESC 
	            </if>
	            <if test="SORT == 'highproduct'">
				P_PRICE DESC 
	            </if>
	            <if test="SORT == 'lowproduct'">
				P_PRICE ASC
	            </if>
			</trim>
	</select>
	
	<!-- 신상품순 상품 리스트 -->
	<select id="newProductList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
				PRODUCT
			WHERE
				P_DELFLAG = 'N'
		]]>
		<trim prefix="AND">
			<if test="searchValue != NULL">
			P_NAME LIKE '%'||#{searchValue}||'%'
			</if>
		</trim>
		
		<trim prefix="AND">
			<if test="priceValue1 != NULL">
				<if test="priceValue2 != NULL">
					P_PRICE BETWEEN #{priceValue1} AND #{priceValue2}
				</if>
				<if test="priceValue2 == NULL">
					P_PRICE BETWEEN #{priceValue1} AND 99999999
				</if>
			</if>
			<if test="priceValue1 == NULL">
				<if test="priceValue2 != NULL">
					P_PRICE BETWEEN 0 AND #{priceValue2}
				</if>
				<if test="priceValue2 == NULL">
				</if>
			</if>	
		</trim>

		<trim prefix="ORDER BY">
		P_DATE DESC	
		</trim>
	</select>
	
	<!-- 인기순 상품 리스트 -->
	<select id="bestProductList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				P_NAME,
				P_IMAGE,
				P_PRICE,
				P_STOCK,
				P_SELL,
				P_KIND,
				P_DATE,
				P_ZIM
			FROM
				PRODUCT
			WHERE
				P_DELFLAG = 'N'
		]]>
		<trim prefix="AND">
			<if test="searchValue != NULL">
			P_NAME LIKE '%'||#{searchValue}||'%'
			</if>
		</trim>
		
		<trim prefix="AND">
			<if test="priceValue1 != NULL">
				<if test="priceValue2 != NULL">
				P_PRICE BETWEEN #{priceValue1} AND #{priceValue2}
				</if>
				<if test="priceValue2 == NULL">
				P_PRICE >= #{priceValue1}
				</if>
			</if>
			<if test="priceValue1 == NULL">
				<if test="priceValue2 != NULL">
				P_PRICE BETWEEN 0 AND #{priceValue2}
				</if>
			</if>
		</trim>
		
		<trim prefix="ORDER BY">
		P_ZIM DESC	
		</trim>
		
	</select>
	
	<!-- 종류별 상품 리스트 -->
	<select id="kindProductList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				P_NAME,
				P_IMAGE,
				P_PRICE,
				P_STOCK,
				P_SELL,
				P_KIND,
				P_DATE,
				P_ZIM
			FROM
				PRODUCT
			WHERE
				P_DELFLAG = 'N'
			]]>
			<trim prefix="AND">
				<if test="searchValue != NULL">
				P_NAME LIKE '%'||#{searchValue}||'%'
				</if>
			</trim>	
			
			<trim prefix="AND">
			<if test="priceValue1 != NULL">
				<if test="priceValue2 != NULL">
				P_PRICE BETWEEN #{priceValue1} AND #{priceValue2}
				</if>
				<if test="priceValue2 == NULL">
				P_PRICE >= #{priceValue1}
				</if>
			</if>
			<if test="priceValue1 == NULL">
				<if test="priceValue2 != NULL">
				P_PRICE BETWEEN 0 AND #{priceValue2}
				</if>
			</if>
			</trim>
			
			<trim prefix="ORDER BY">
				<if test="SORT == NULL">
				P_CODE DESC
				</if>
				<if test="SORT == 'newproduct'">
				P_DATE DESC  
				</if>
	        	<if test="SORT == 'bestproduct'">
				P_ZIM DESC 
	            </if>
	            <if test="SORT == 'highproduct'">
				P_PRICE DESC 
	            </if>
	            <if test="SORT == 'lowproduct'">
				P_PRICE ASC
	            </if>
			</trim>
	</select>
	
	<!-- 상품 상세 -->
	<select id="productDetail" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
				PRODUCT
			WHERE
				P_DELFLAG = 'N'
			AND
				P_CODE = #{p_code}
		]]>
	</select>
	
</mapper>
